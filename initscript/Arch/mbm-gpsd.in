#!/bin/bash

prefix=@prefix@
exec_prefix=@prefix@
sbindir=@sbindir@

MBM_BIN=${sbindir}/mbm-gpsd

# general config
. /etc/rc.conf
. /etc/rc.d/functions

# Sanity checks.
[ -x $MBM_BIN ] || exit 0

PID=`pidof -o %PPID $MBM_BIN`
case "$1" in
	start)
		stat_busy "Starting mbm-gpsd"
		if [ -z "$PID" ]; then
			$MBM_BIN > /dev/null 2>&1 &
		fi
		if [ ! -z "$PID" -o $? -gt 0 ]; then
			stat_fail
		else
			add_daemon mbm-gpsd
			stat_done
		fi
		;;
	stop)
		stat_busy "Stopping mbm-gpsd"
			[ ! -z "$PID" ] && kill $PID &> /dev/null
		if [ $? -gt 0 ]; then
			stat_fail
		else
			rm_daemon mbm-gpsd
			stat_done
		fi
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	sleep)
		/usr/bin/dbus-send --system \
		--dest=org.freedesktop.MbmGps \
		--type=method_call \
		/org/freedesktop/MbmGps \
		org.freedesktop.MbmGps.sleep
		;;
	wake)
		/usr/bin/dbus-send --system \
		--dest=org.freedesktop.MbmGps \
		--type=method_call \
		/org/freedesktop/MbmGps \
		org.freedesktop.MbmGps.wake
		;;
	*)
		echo "usage: $0 {start|stop|restart|sleep|wake}"
		;;
esac
exit 0



